{% extends 'base.html.twig' %}

{% block title %}Paracha Connect - G√©oula Kids{% endblock %}

{% block body %}
<div class="space-y-6 max-w-5xl mx-auto">
    {# Header & Progress #}
    <div class="text-center space-y-4">
        <h1 class="text-3xl sm:text-4xl font-bold gradient-text flex items-center justify-center gap-3">
            <span class="text-vibrant-orange">üìñ</span>
            Paracha Connect
        </h1>

        {# Torah Progress Bar #}
        <div class="glass-card rounded-[20px] p-4 max-w-3xl mx-auto">
            <div class="flex justify-between items-center mb-2 text-sm">
                <span class="font-bold text-royal-blue">Progression Annuelle</span>
                <span class="text-gold font-bold">{{ annualProgress|round }}%</span>
            </div>
            <div class="flex gap-1 h-3 w-full rounded-full overflow-hidden bg-gray-200">
                {% for book, count in torahBooks %}
                    {% set isCurrent = book == currentBook %}
                    {% set isPast = false %} {# Logic to determine if book is past would go here #}

                    <div class="flex-1 relative group cursor-help">
                        <div class="h-full w-full {{ isCurrent ? 'bg-vibrant-orange animate-pulse' : 'bg-royal-blue/20' }}"></div>
                        {# Tooltip #}
                        <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 hidden group-hover:block bg-black/80 text-white text-xs px-2 py-1 rounded whitespace-nowrap z-10">
                            {{ book }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <p class="text-xs text-gray-500 mt-2">
                Nous sommes dans le livre de <span class="font-bold text-royal-blue">{{ currentBook }}</span>, Paracha <span class="font-bold text-vibrant-orange">{{ currentParachaName }}</span>
            </p>
        </div>
    </div>

    {# Reader Interface #}
    <section class="glass-card rounded-[30px] overflow-hidden shadow-2xl border-4 border-white/50">
        {# Toolbar #}
        <div class="flex flex-wrap items-center justify-between gap-3 p-4 bg-white/80 border-b border-gray-200 backdrop-blur-sm">
            <div class="flex items-center gap-2">
                <span class="text-lg font-bold text-royal-blue">{{ currentDocument.title }}</span>
                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">Page 1/{{ currentDocument.pageCount }}</span>
            </div>

            <div class="flex items-center gap-2">
                <button class="puffy-button p-2 rounded-[10px] hover:scale-110 transition" title="Zoom out">‚ûñ</button>
                <button class="puffy-button p-2 rounded-[10px] hover:scale-110 transition" title="Zoom in">‚ûï</button>
                <div class="w-px h-6 bg-gray-300 mx-1"></div>
                <button class="puffy-button p-2 rounded-[10px] hover:scale-110 transition" title="Download">‚¨áÔ∏è</button>
            </div>
        </div>

        {# PDF Viewer Area #}
        <div class="bg-gray-50 relative min-h-[600px] flex flex-col items-center justify-center p-4">
            {# Placeholder for PDF #}
            <iframe src="{{ currentDocument.pdfUrl }}" class="w-full h-[600px] rounded-xl shadow-inner border border-gray-200" frameborder="0"></iframe>

            {# Fallback / Overlay if needed #}
            <div class="absolute bottom-4 right-4">
                <a href="{{ path('app_library_complete') }}" class="puffy-button-gold px-6 py-3 rounded-[20px] font-bold shadow-lg hover:scale-105 transition flex items-center gap-2 animate-bounce">
                    <span>‚úÖ</span> J'ai termin√© la lecture !
                </a>
            </div>
        </div>

        {# Navigation #}
        <div class="flex items-center justify-between p-4 bg-white/80 border-t border-gray-200 backdrop-blur-sm">
            <button class="puffy-button px-4 py-2 text-sm rounded-[20px] font-medium disabled:opacity-50 hover:bg-gray-100" disabled>
                ‚¨ÖÔ∏è Pr√©c√©dent
            </button>

            <div class="flex items-center gap-1">
                {% for i in 1..5 %}
                    <button class="w-8 h-8 rounded-[10px] text-sm font-medium transition-all duration-200 {{ i == 1 ? 'bg-royal-blue text-white shadow-md' : 'hover:bg-gray-100 text-gray-600' }}">
                        {{ i }}
                    </button>
                {% endfor %}
                <span class="text-gray-400">...</span>
            </div>

            <button class="puffy-button px-4 py-2 text-sm rounded-[20px] font-medium hover:bg-gray-100">
                Suivant ‚û°Ô∏è
            </button>
        </div>
    </section>
</div>
{% endblock %}
