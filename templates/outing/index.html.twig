{% extends 'base.html.twig' %}

{% block title %}Sorties - G√©oula Kids{% endblock %}

{% block body %}
<div class="space-y-12 max-w-5xl mx-auto">
    {# Header #}
    <div class="text-center space-y-4">
        <h1 class="text-3xl sm:text-4xl font-bold gradient-text flex items-center justify-center gap-3">
            <span class="text-vibrant-orange">üöå</span>
            Sorties & Activit√©s
        </h1>
        <p class="text-sm sm:text-base text-gray-600">
            Rejoins-nous pour des moments inoubliables !
        </p>
    </div>

    {# Upcoming Outings #}
    <section>
        <h2 class="text-2xl font-bold text-royal-blue mb-6 flex items-center gap-2">
            <span class="text-gold">üìÖ</span> Prochaines Sorties
        </h2>
        <div class="grid gap-6">
            {% for outing in upcomingOutings %}
                <div class="neo-card rounded-[25px] p-6 flex flex-col md:flex-row items-center gap-6 transition-all duration-300 hover:scale-[1.02]">
                    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-royal-blue to-gold flex items-center justify-center text-4xl shadow-lg flex-shrink-0">
                        {{ outing.icon }}
                    </div>
                    <div class="flex-1 text-center md:text-left">
                        <h3 class="text-xl font-bold text-royal-blue mb-1">{{ outing.title }}</h3>
                        <p class="text-sm font-bold text-vibrant-orange mb-2">{{ outing.date }}</p>
                        <p class="text-gray-600 text-sm">{{ outing.description }}</p>
                    </div>
                    <a href="https://www.billetweb.fr/sortie-learn-kiff" target="_blank" class="puffy-button-primary px-8 py-3 rounded-[20px] font-bold shadow-md hover:shadow-xl transition-all w-full md:w-auto text-center">
                        S'inscrire üìù
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>

    {# Past Outings (Memories) #}
    <section>
        <h2 class="text-2xl font-bold text-royal-blue mb-6 flex items-center gap-2">
            <span class="text-vibrant-orange">üì∏</span> Nos Souvenirs
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {% for outing in pastOutings %}
                <div class="glass-card rounded-[25px] overflow-hidden group hover:shadow-2xl transition-all duration-300">
                    <div class="h-48 overflow-hidden relative">
                        <img src="{{ outing.image }}" alt="{{ outing.title }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                            <span class="text-white font-bold text-sm">Voir l'album</span>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="text-lg font-bold text-royal-blue">{{ outing.title }}</h3>
                        </div>
                        <p class="text-sm text-gray-600 mb-4 line-clamp-2">{{ outing.description }}</p>
                        <a href="{{ path('app_outings_gallery', {id: outing.id}) }}" class="puffy-button-gold w-full py-2 rounded-[15px] font-bold text-sm block text-center hover:bg-white transition-colors">
                            Voir les photos üñºÔ∏è
                        </a>
                    </div>
                </div>
            {% endfor %}
