                <a href="{{ path(tile.route) }}" class="group neo-card rounded-[20px] sm:rounded-[25px] p-4 sm:p-6 md:p-8 text-left transition-all duration-300 hover:scale-105 hover:shadow-2xl block h-full">
                    <div class="w-10 h-10 sm:w-14 sm:h-14 md:w-16 md:h-16 rounded-[15px] sm:rounded-[20px] bg-gradient-to-br {{ tile.color }} flex items-center justify-center mb-3 sm:mb-4 group-hover:rotate-6 transition-transform duration-300 text-white text-lg sm:text-2xl">
                        {% if tile.icon == 'gamepad' %}üéÆ{% elseif tile.icon == 'video' %}üé•{% elseif tile.icon == 'book' %}üìñ{% elseif tile.icon == 'calendar' %}üìÖ{% elseif tile.icon == 'sparkles' %}‚ú®{% elseif tile.icon == 'trophy' %}üèÜ{% endif %}
                    </div>
                    <h3 class="text-sm sm:text-base md:text-lg font-bold text-royal-blue mb-1 leading-tight">
                        {{ tile.title }}
                    </h3>
                    <p class="text-[10px] sm:text-xs md:text-sm text-gray-600 line-clamp-2">
                        {{ tile.description }}
                    </p>
                </a>
            {% endfor %}
