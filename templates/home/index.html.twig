            Compl√®te tes missions quotidiennes, gagne des badges exclusifs et grimpe au sommet du leaderboard!
        </p>
        <a href="{{ path('app_missions') }}" class="puffy-button-primary px-6 py-3 sm:px-8 sm:py-4 text-sm sm:text-lg rounded-[20px] font-medium inline-block w-full sm:w-auto">
            Voir mes missions
        </a>
    </section>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const carousel = document.getElementById('testimonials-carousel');
        const prevBtn = document.getElementById('prev-testimonial');
        const nextBtn = document.getElementById('next-testimonial');
        let autoScroll;

        const scrollAmount = 320; // Approx card width

        const startAutoScroll = () => {
            autoScroll = setInterval(() => {
                const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;
                if (carousel.scrollLeft >= maxScrollLeft - 10) {
                    carousel.scrollTo({ left: 0, behavior: 'smooth' });
                } else {
                    carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
                }
            }, 4000); // 4 seconds
        };

        const stopAutoScroll = () => {
            clearInterval(autoScroll);
        };

        // Manual Navigation
        prevBtn.addEventListener('click', () => {
            stopAutoScroll();
            carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
            // Restart auto-scroll after interaction (optional, maybe better to keep stopped)
            // setTimeout(startAutoScroll, 5000);
        });

        nextBtn.addEventListener('click', () => {
            stopAutoScroll();
            const maxScrollLeft = carousel.scrollWidth - carousel.clientWidth;
            if (carousel.scrollLeft >= maxScrollLeft - 10) {
                carousel.scrollTo({ left: 0, behavior: 'smooth' });
            } else {
                carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
            }
        });

        // Start scrolling
        startAutoScroll();

        // Pause on hover/touch
        carousel.addEventListener('mouseenter', stopAutoScroll);
        carousel.addEventListener('touchstart', stopAutoScroll);

        // Resume on leave
        carousel.addEventListener('mouseleave', startAutoScroll);
        carousel.addEventListener('touchend', startAutoScroll);
    });
</script>
{% endblock %}
